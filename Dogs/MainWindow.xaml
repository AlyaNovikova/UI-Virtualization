<Window x:Class="Virtualization.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dooooooooogs!!!" Height="200" Width="300">

    <Window.Resources>
        <DataTemplate x:Key="DogTemplate" >
            <StackPanel>
                <StackPanel.Resources>
                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="Margin" Value="0,10,0,0"/>
                    </Style>
                </StackPanel.Resources>
                <TextBlock Text="{Binding Title}" />
                <Image Source="{Binding Data}" Width="100" Height="100" />
                <Button Content="Delete" Click="DeleteDog_Clicked"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <ListBox IsSynchronizedWithCurrentItem="True"
                     Name="DogsList" ItemsSource="{Binding}"
                     ItemTemplate="{StaticResource DogTemplate}" />
</Window>